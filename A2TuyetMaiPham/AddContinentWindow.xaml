        mc:Ignorable="d"
        Title="AddContinentWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtInputContinent" HorizontalAlignment="Left" Margin="192,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" AutomationProperties.IsRequiredForForm="True"/>
        <Button x:Name="btnAddContinent" Content="Add" HorizontalAlignment="Left" Margin="340,108,0,0" VerticalAlignment="Top" Click="btnAddContinent_Click"/>
